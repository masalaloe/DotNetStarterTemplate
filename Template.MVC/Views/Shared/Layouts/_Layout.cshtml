@using Template.MVC.Views.Shared.Components.Footer
@using Template.MVC.Views.Shared.Components.Header
@using Template.MVC.Views.Shared.Components.Sidebar

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Template.MVC</title>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    @await Html.PartialAsync("_Devextreme.cshtml")
    @await Html.PartialAsync("_Styles.cshtml")
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        @(await Component.InvokeAsync<Header>(new { Title = "Asp.Net MVC" }))
        @(await Component.InvokeAsync<Sidebar>())
        <div class="content-wrapper">
            @await RenderSectionAsync("Header", required: false)
            <section class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </section>
        </div>
        @(await Component.InvokeAsync<Footer>())
    </div>
    @await Html.PartialAsync("_Scripts.cshtml")
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
